{
  "swagger": "2.0",
  "info": {
    "title": "Alert APIS",
    "version": "1.0.0",
    "description": "APIS for alert v2"
  },
  "paths": {
    "/platform/alerts.alauda.io/v1beta1/clusters/{cluster}/alerts": {
      "get": {
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "summary": "Get triggered alert status",
        "description": "Retrieves the current status of all triggered alerts in the cluster.",
        "parameters": [
          {
            "name": "cluster",
            "in": "path",
            "description": "Name of the cluster",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with list of triggered alerts",
            "schema": {
              "$ref": "#/definitions/AlertStatusList"
            }
          }
        }
      }
    },
    "/platform/alerts.alauda.io/v1beta1/projects/{project}/clusters/{cluster}/namespaces/{namespace}/alerts": {
      "get": {
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "summary": "Get triggered alert status",
        "description": "Retrieves the current status of all triggered alerts in the namespace.",
        "parameters": [
          {
            "name": "project",
            "in": "path",
            "description": "Name of the project",
            "required": true,
            "type": "string"
          },
          {
            "name": "cluster",
            "in": "path",
            "description": "Name of the cluster",
            "required": true,
            "type": "string"
          },
          {
            "name": "namespace",
            "in": "path",
            "description": "Name of the namespace",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with list of triggered alerts",
            "schema": {
              "$ref": "#/definitions/AlertStatusList"
            }
          }
        }
      }
    },
    "/platform/alerts.alauda.io/v1beta1/clusters/{cluster}/silences": {
      "get": {
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "summary": "Get silenced alert status",
        "description": "Retrieves the current status of all silenced alerts in the cluster.",
        "parameters": [
          {
            "name": "cluster",
            "in": "path",
            "description": "Name of the cluster",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with list of silenced alerts",
            "schema": {
              "$ref": "#/definitions/SilenceStatusList"
            }
          }
        }
      }
    },
    "/platform/alerts.alauda.io/v1beta1/projects/{project}/clusters/{cluster}/namespaces/{namespace}/silences": {
      "get": {
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "summary": "Get silenced alert status",
        "description": "Retrieves the current status of all silenced alerts in the namespace.",
        "parameters": [
          {
            "name": "project",
            "in": "path",
            "description": "Name of the project",
            "required": true,
            "type": "string"
          },
          {
            "name": "cluster",
            "in": "path",
            "description": "Name of the cluster",
            "required": true,
            "type": "string"
          },
          {
            "name": "namespace",
            "in": "path",
            "description": "Name of the namespace",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with list of silenced alerts",
            "schema": {
              "$ref": "#/definitions/SilenceStatusList"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "AlertStatusList": {
      "properties": {
        "alertrule": {
          "type": "string",
          "description": "The name of the alert rule"
        },
        "subrules": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AlertStatusSubRule"
          }
        }
      }
    },
    "AlertStatusSubRule": {
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the subrule"
        },
        "status": {
          "type": "string",
          "description": "The status of the subrule.",
          "enum": ["firing", "pending"]
        }
      }
    },
    "SilenceStatusList": {
      "properties": {
        "alertrule": {
          "type": "string",
          "description": "The name of the alert rule"
        },
        "status": {
          "type": "string",
          "description": "The status of the alert rule.",
          "enum": ["permanentActive", "active"]
        }
      }
    }
  }
}
