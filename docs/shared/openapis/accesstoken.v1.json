{
  "swagger": "2.0",
  "info": {
    "title": "Token APIS",
    "version": "1.0.0"
  },
  "paths": {
    "/auth/v1/accesstoken": {
      "post": {
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "summary": "Create an API Token",
        "description": "Creates a new API access token for the current authenticated user. The token inherits the same permissions as the user and can be used for API authentication. It can be configured with an optional expiration time. If no expiration is set, the token will be permanent.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Access token creation request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AccessTokenRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully created access token",
            "schema": {
              "$ref": "#/definitions/AccessToken"
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing authentication credentials"
          }
        }

      }
    }
  },
  "definitions": {
    "AccessTokenRequest": {
      "properties": {
        "expiration": {
          "description": "Token expiration timestamp in seconds. For permanent tokens, leave this field empty or omit it.",
          "type": "integer",
          "format": "int64"
        },
        "description": {
          "description": "Description of the token",
          "type": "string"
        }
      }
    },
    "AccessToken": {
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier of the token"
        },
        "token": {
          "type": "string",
          "description": "The access token in JWT format"
        },
        "timestamp": {
          "description": "Token issuance timestamp in seconds",
          "type": "integer",
          "format": "int64"
        },
        "expiration": {
          "description": "Token expiration timestamp in seconds",
          "type": "integer",
          "format": "int64"
        },
        "description": {
          "type": "string",
          "description": "Description of the token"
        }
      }
    }
  }
}
