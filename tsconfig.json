{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@docs/*": ["./docs/*"],
      "@theme/*": ["./theme/*"],
      "@theme/hooks": ["./theme/hooks/index.ts"],
    }
  },
  "mdx": {
    "checkMdx": true
  }
}
